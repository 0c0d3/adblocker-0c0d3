{
  "manifest_version": 3,
  "name": "0c0d3",
  "version": "1.2.0",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js", "userscript.js"], 
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "*://*/*"
  ],
 
  "action": {
    "default_popup": "popup.html"
  }
}

